# === Generic ===
COMPOSE_PROJECT_NAME=sauti_cms

# === Django Backend (sauti_cms/.env) ===
DJANGO_DEBUG=True
DJANGO_SECRET_KEY=your-super-secret-key-for-development
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,backend
DATABASE_URL=postgres://postgres:postgres@db:5432/sauti_cms
CORS_ALLOWED_ORIGINS=http://localhost,http://127.0.0.1

# === Public Frontend (sauti-frontend/.env.development & .env.production) ===
# Base path where the app is served from (e.g., / or /my-app/)
VITE_BASE_PATH=/
# Full URL to the backend API
VITE_API_BASE_URL=http://localhost/api

# === Admin Frontend (sauti-admin/.env.development & .env.production) ===
# Base path where the app is served from
VITE_ADMIN_BASE_PATH=/admin
# Full URL to the backend API
VITE_ADMIN_API_BASE_URL=http://localhost/api
