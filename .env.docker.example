# Docker Production Environment Configuration
# Copy this file to .env.docker and update with your production values

# Django Backend Configuration
DEBUG=False
SECRET_KEY=change-this-to-a-secure-random-50-character-string
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,localhost

# Database Configuration - PostgreSQL
DB_NAME=sauti_cms
DB_USER=postgres
DB_PASSWORD=change-this-to-a-secure-database-password
DB_HOST=db
DB_PORT=5432

# CORS Configuration - Update with your domain
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Encryption Key for Sensitive Data (32-byte Fernet key)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=change-this-to-a-32-byte-fernet-key

# Frontend Configuration
VITE_API_URL=https://your-domain.com
VITE_APP_NAME=Sauti Child Helpline
VITE_HOTLINE=116
VITE_WHATSAPP=+256123456789
VITE_EMAIL=info@sauti.mglsd.go.ug

# Admin Dashboard Configuration
VITE_APP_TITLE=Sauti Admin Dashboard
VITE_APP_VERSION=1.0.0

# Email Configuration (Optional - for production notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# JWT Configuration
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# Production Security Settings (uncomment for production)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
